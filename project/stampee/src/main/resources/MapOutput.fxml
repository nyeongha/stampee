<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.MapService">
   <AnchorPane VBox.vgrow="ALWAYS" minHeight="400">
      <WebView fx:id="webView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
   </AnchorPane>

   <GridPane hgap="10" vgap="10" styleClass="store-info">
      <padding>
         <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>

      <Label text="가게 이름:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
      <Label fx:id="storeNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

      <Label text="주소:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <Label fx:id="addressLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

      <Label text="전화번호:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <Label fx:id="phoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

      <Label text="영업 시간:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
      <Label fx:id="hoursLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
   </GridPane>
</VBox>
