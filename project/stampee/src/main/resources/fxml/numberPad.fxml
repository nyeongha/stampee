<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.NumberPadController"
      alignment="CENTER" prefWidth="200" prefHeight="300"
      styleClass="number-pad-container" stylesheets="/css/numberPad.css">

    <TextField fx:id="inputField" editable="false"/>

    <HBox spacing="5">
        <Button text="1" onAction="#handleDigit" styleClass="number-pad-button"/>
        <Button text="2" onAction="#handleDigit" styleClass="number-pad-button"/>
        <Button text="3" onAction="#handleDigit" styleClass="number-pad-button"/>
    </HBox>

    <HBox spacing="5">
        <Button text="4" onAction="#handleDigit" styleClass="number-pad-button"/>
        <Button text="5" onAction="#handleDigit" styleClass="number-pad-button"/>
        <Button text="6" onAction="#handleDigit" styleClass="number-pad-button"/>
    </HBox>

    <HBox spacing="5">
        <Button text="7" onAction="#handleDigit" styleClass="number-pad-button"/>
        <Button text="8" onAction="#handleDigit" styleClass="number-pad-button"/>
        <Button text="9" onAction="#handleDigit" styleClass="number-pad-button"/>
    </HBox>

    <HBox spacing="5">
        <Button text="Clear" onAction="#handleClear" styleClass="number-pad-button"/>
        <Button text="0" onAction="#handleDigit" styleClass="number-pad-button"/>
        <Button text="OK" onAction="#handleOK" styleClass="number-pad-button"/>
    </HBox>

</VBox>
