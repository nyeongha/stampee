<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox id="Header" styleClass="header" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HeaderController">
    <children>
        <ImageView fitHeight="40" fitWidth="40" styleClass="logo">
            <image>
                <Image url="/image/stampee_logo.png"/>
            </image>
        </ImageView>
        <HBox spacing="10" styleClass="menu-items">
            <children>
                <Label text="My Review" onMouseClicked="#handleMyReview"/>
                <Label text="Reviews" onMouseClicked="#handleReviews"/>
                <Label text="MyCoupon" onMouseClicked="#handleMyCoupon"/>
                <Label fx:id="logoutLabel" text="Logout" onMouseClicked="#handleLogout"/>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </children>
</HBox>
